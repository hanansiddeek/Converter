<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_len"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/butter"
    tools:context=".length">


    <Button
        android:id="@+id/con_tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/dark_blue"
        android:text="CONVERT"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_tem"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/input_tem"
        android:layout_width="168dp"
        android:layout_height="47dp"
        android:layout_marginTop="80dp"
        android:hint="Enter in C"
        android:textColorHint="@color/ashh"
        android:textColor="@color/black"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tem"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/output_tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Result is "
        android:textColor="@color/black"
        android:textColorHint="@color/ashh"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_tem"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:id="@+id/title_tem"
        android:layout_width="293dp"
        android:layout_height="99dp"
        android:text="Temperature Converter"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />
</androidx.constraintlayout.widget.ConstraintLayout>